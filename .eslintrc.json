{
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier/@typescript-eslint",
        "plugin:prettier/recommended"
    ],
    "plugins": [
        "react",
        "@typescript-eslint",
        "prettier"
    ],
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "jasmine": true,
        "jest": true
    },
    "rules": {
        "curly": "error",
        "react/prop-types": 0,
        "no-constant-condition": 0,
        "no-extra-boolean-cast": 0,
        "no-prototype-builtins": 0,
        "no-case-declarations": 0,
        "prettier/prettier": [
            "warn",
            {
                "singleQuote": false
            }
        ]
    },
    "settings": {
        "react": {
            "pragma": "React",
            "version": "detect"
        }
    }
}